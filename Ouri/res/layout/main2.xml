
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 android:orientation="vertical" android:layout_width="fill_parent"
 android:layout_height="fill_parent"
 
  android:background="#FFFF">

    <RelativeLayout
        android:id="@+id/titlebar"
        android:layout_width="fill_parent"
        android:layout_height="64dip"
        android:orientation="horizontal"
        android:background="@drawable/bg_top"
         >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/title_ouri" />

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_addfriends"
            android:background="#0000" 
            android:layout_marginRight="15dip"/>

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imageButton1"
            android:src="@drawable/ic_search"
            android:background="#0000"
            android:layout_marginRight="15dip"
             />

    </RelativeLayout>

 <RelativeLayout 
 android:id="@+id/edit"
  android:layout_width="fill_parent" 
  android:layout_height="0px"
  android:layout_weight="3"
  android:background="@drawable/bg_main"
   >
        <!-- 
	 <LinearLayout 
	     
         android:layout_alignParentLeft="true"
         android:layout_centerVertical="true"
	     >     
	     
	     
	 </LinearLayout>
	  -->
     <ImageButton
         android:id="@+id/imageButton8"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_centerVertical="true"
         android:background="#0000"
         android:src="@drawable/main_left" />

     <ImageButton
         android:id="@+id/imageButton9"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_centerVertical="true"
         android:background="#0000"
         android:src="@drawable/main_right" />

     <ImageView
         android:id="@+id/imageView2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignRight="@+id/imageButton8"
         android:layout_centerVertical="true"
         android:layout_marginRight="10dip"
         android:src="@drawable/main_mypage" />

     <ImageView
         android:id="@+id/imageView3"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/imageButton9"
         android:layout_centerVertical="true"
         android:layout_marginLeft="10dip"
         android:src="@drawable/main_group" />
     
 </RelativeLayout>

 <LinearLayout
     android:id="@+id/belowbar"
     android:layout_width="fill_parent"
     android:layout_height="74dip"
     android:background="@drawable/bg_under"
     android:gravity="bottom" >

     <ImageButton
         android:id="@+id/imageButton3"
         android:layout_width="0dip"
         android:layout_height="wrap_content"
         android:layout_weight="1"
         android:layout_marginBottom="12dip"
         android:background="#0000"
         android:src="@drawable/ic_my" />

     <ImageButton
         android:id="@+id/imageButton4"
         android:layout_width="0dip"
         android:layout_height="wrap_content"
